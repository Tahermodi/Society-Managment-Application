<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:gl="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/parent.contentLayout"
    android:background="#00000000"
    tools:context=".MainActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/viewParent.headerText"
                    android:layout_gravity="bottom"
                    android:text="Keep It\nSimple" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/hero" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_my_flat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:clickable="true"
                        app:cardCornerRadius="15dp"
                        app:cardPreventCornerOverlap="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/home_gradient_maths"
                            android:gravity="center"
                            android:minHeight="100dp"
                            android:padding="10dp">

                            <TextView
                                style="@style/viewParent.headerText.HomeCardTitle"
                                android:fontFamily="@font/acme"
                                android:gravity="center"
                                android:text="My\nFlat"
                                android:textSize="15dp" />

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_parking"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:clickable="true"
                        app:cardCornerRadius="15dp"
                        app:cardPreventCornerOverlap="true">

                        <net.colindodd.gradientlayout.GradientRelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:minHeight="100dp"
                            android:padding="10dp"
                            gl:end_color="@color/gradientLightYellow2"
                            gl:orientation="LEFT_RIGHT"
                            gl:start_color="@color/gradientLightOrange2">

                            <TextView
                                style="@style/viewParent.headerText.HomeCardTitle"
                                android:fontFamily="@font/acme"
                                android:gravity="center"
                                android:text="Parking"
                                android:textSize="15dp" />


                        </net.colindodd.gradientlayout.GradientRelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_complain_box"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:clickable="true"
                        app:cardCornerRadius="15dp"
                        app:cardPreventCornerOverlap="true">

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_service_center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:clickable="true"
                        app:cardCornerRadius="15dp"
                        app:cardPreventCornerOverlap="true">

                        <net.colindodd.gradientlayout.GradientRelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:minHeight="100dp"
                            android:padding="10dp"
                            gl:end_color="@color/gradientLightBlue2"
                            gl:orientation="LEFT_RIGHT"
                            gl:start_color="@color/gradientLightBlue1">


                            <TextView
                                style="@style/viewParent.headerText.HomeCardTitle"
                                android:fontFamily="@font/acme"
                                android:gravity="center"
                                android:text="Service\nCenter"
                                android:textSize="15dp" />

                        </net.colindodd.gradientlayout.GradientRelativeLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_notice_board"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:clickable="true"
                        app:cardCornerRadius="15dp"
                        app:cardPreventCornerOverlap="true">

                        <net.colindodd.gradientlayout.GradientRelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:minHeight="100dp"
                            android:padding="10dp"
                            gl:end_color="@color/gradientOrange"
                            gl:orientation="LEFT_RIGHT"
                            gl:start_color="@color/gradientLightYellow">

                            <TextView
                                style="@style/viewParent.headerText.HomeCardTitle"
                                android:fontFamily="@font/acme"
                                android:gravity="center"
                                android:text="Notice\nBoard"
                                android:textSize="15dp" />

                        </net.colindodd.gradientlayout.GradientRelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_event"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:clickable="true"
                        app:cardCornerRadius="15dp"
                        app:cardPreventCornerOverlap="true">

                        <net.colindodd.gradientlayout.GradientRelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:minHeight="100dp"
                            android:padding="10dp"
                            gl:end_color="@color/gradientBlack2"
                            gl:orientation="LEFT_RIGHT"
                            gl:start_color="@color/gradientBlack1">

                            <TextView
                                style="@style/viewParent.headerText.HomeCardTitle"
                                android:fontFamily="@font/acme"
                                android:gravity="center"
                                android:text="Event"
                                android:textSize="15dp" />


                        </net.colindodd.gradientlayout.GradientRelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_society_expenses"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:clickable="true"
                        app:cardCornerRadius="15dp"
                        app:cardPreventCornerOverlap="true">

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_rules"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:clickable="true"
                        app:cardCornerRadius="15dp"
                        app:cardPreventCornerOverlap="true">

                        <net.colindodd.gradientlayout.GradientRelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:minHeight="100dp"
                            android:padding="10dp"
                            gl:end_color="@color/gradientBrown2"
                            gl:orientation="LEFT_RIGHT"
                            gl:start_color="@color/gradientBrown1">

                            <TextView
                                style="@style/viewParent.headerText.HomeCardTitle"
                                android:fontFamily="@font/acme"
                                android:gravity="center"
                                android:text="Rules"
                                android:textSize="15dp" />

                        </net.colindodd.gradientlayout.GradientRelativeLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_maintenance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:clickable="true"
                        app:cardCornerRadius="15dp"
                        app:cardPreventCornerOverlap="true">

                        <net.colindodd.gradientlayout.GradientRelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:minHeight="100dp"
                            android:padding="10dp"
                            gl:end_color="@color/gradientLightBlue"
                            gl:orientation="LEFT_RIGHT"
                            gl:start_color="@color/gradientLightGreen">

                            <TextView
                                style="@style/viewParent.headerText.HomeCardTitle"
                                android:fontFamily="@font/acme"
                                android:gravity="center"
                                android:text="Maintenance"
                                android:textSize="12dp" />

                        </net.colindodd.gradientlayout.GradientRelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_guest_register"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:clickable="true"
                        app:cardCornerRadius="15dp"
                        app:cardPreventCornerOverlap="true">


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_flat_directory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:clickable="true"
                        app:cardCornerRadius="15dp"
                        app:cardPreventCornerOverlap="true">

                        <net.colindodd.gradientlayout.GradientRelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:minHeight="100dp"
                            android:padding="10dp"
                            gl:end_color="@color/gradientLRed2"
                            gl:orientation="LEFT_RIGHT"
                            gl:start_color="@color/gradientLRed1">

                            <TextView
                                style="@style/viewParent.headerText.HomeCardTitle"
                                android:fontFamily="@font/acme"
                                android:gravity="center"
                                android:text="Flat\nDirectory"
                                android:textSize="15dp" />

                        </net.colindodd.gradientlayout.GradientRelativeLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <com.wangjie.rapidfloatingactionbutton.RapidFloatingActionLayout xmlns:rfal="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_main_rfal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        rfal:rfal_frame_alpha="0.7"
        rfal:rfal_frame_color="#ffffff">

        <com.wangjie.rapidfloatingactionbutton.RapidFloatingActionButton xmlns:rfab="http://schemas.android.com/apk/res-auto"
            android:id="@+id/activity_main_rfab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="@color/colorAccent"
            android:padding="8dp"
            rfab:rfab_color_normal="@color/colorAccent"
            rfab:rfab_color_pressed="#D30FC1"
            rfab:rfab_drawable="@drawable/rfab__drawable_rfab_default"
            rfab:rfab_shadow_dx="0dp"
            rfab:rfab_shadow_dy="2dp"
            rfab:rfab_shadow_radius="7dp"
            rfab:rfab_size="normal" />

    </com.wangjie.rapidfloatingactionbutton.RapidFloatingActionLayout>

</RelativeLayout>